<% if @title %>
  <div uk-grid>
    <div class="uk-width-auto url-image">
      <%# サムネイル画像を抽出出来なかったら「No image」を表示 %>
      <% if @image.empty? %>
        <%= image_tag 'no-image.png',style:"height: 60px;" %>
      <% else %> 
        <img src=<%= @image %> style="height: 60px;" />
      <% end %>
    </div>
    <div class="uk-width-expand">
      <p class="uk-text-small uk-text-bold uk-margin-remove-bottom"><%= @title %></p>
      <p class="uk-text-small uk-margin-remove-top font-size-12pt"><%= @description.truncate(120) %>…</p>
    </div>
  </div>  
<% end %>