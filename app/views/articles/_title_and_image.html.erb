<% if @title %>
  <div uk-grid>
    <div class="uk-width-auto url-image">
      <% if @image.empty? %>
        <%= image_tag 'no-image.png',style:"height: 80px;" %>
      <% else %> 
        <img src=<%= @image %> style="height: 80px;" />
      <% end %>
    </div>
    <div class="uk-width-expand">
      <p class="uk-text-small"><%= @title %></p>
    </div>
  </div>  
<% end %>