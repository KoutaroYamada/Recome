<% if title %>
  <div uk-grid>
    <div class="uk-width-auto url-image">
      <%# サムネイル画像を抽出出来なかったら「No image」を表示 %>
      <% if @image.empty? %>
        <%# サムネイル画像 %>
        <%= image_tag 'no-image.png',style:"height: 60px;" ,class:"article_thumbnail_image" %>
      <% else %> 
        <img class="article_thumbnail_image" src=<%= @image %> style="height: 60px;" />
      <% end %>
    </div>
    <div class="uk-width-expand">
      <%# 記事タイトル %>
      <p class="uk-text-small uk-text-bold uk-margin-remove-bottom"><%= title.truncate(58) %></p>
      <input type="hidden" id="article_title" value=<%= title %>><%# form_forのhidden_fieldに値を引き渡すため %>
      <%# 記事概要 %>
      <p class="uk-text-small uk-margin-remove-top font-size-12pt" ><%= description.truncate(120) %></p>
      <input type="hidden" id="article_description" value=<%= description %>><%# form_forのhidden_fieldに値を引き渡すため %>
    </div>
  </div>  
<% end %>

